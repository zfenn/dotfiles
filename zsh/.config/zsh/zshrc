## OPTIONS
setopt autocd
setopt extendedglob
setopt nomatch
setopt notify
setopt share_history

unsetopt beep

## COMPLETION
autoload -Uz compinit
compinit -d "$XDG_CACHE_HOME/compdump-$ZSH_VERSION"
zstyle :compinstall filename '$HOME/.zshrc'
zstyle ':completion:*' menu select

## PLUGINS
for file in $XDG_CONFIG_HOME/zsh/plugins/*.zsh; do
    source $file
done

